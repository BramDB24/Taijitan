                        </div>*@
                    <div class="form-group">
                        <label asp-for="Input.Wachtwoord"></label>
                        <input asp-for="Input.Wachtwoord" class="form-control" />
                        <span asp-validation-for="Input.Wachtwoord" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.OnthoudMij">
                                <input asp-for="Input.OnthoudMij" />
                                @Html.DisplayNameFor(m => m.Input.OnthoudMij)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Meld aan</button>
                    </div>
                    @*<div class="form-group">
                            <p>
