@page
@model LoginModel

@{
    ViewData["Title"] = "Meld aan";
}
<body style='background: #C5D7D1'>
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-6">
            <section>
                <form method="post">
                    <h4>Meld aan met je gebruikersnaam en wachtwoord.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Gebruikersnaam"></label>
                        <input asp-for="Input.Gebruikersnaam" class="form-control" />
                        <span asp-validation-for="Input.Gebruikersnaam" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
